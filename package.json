{
  "name": "create-react-component",
  "publisher": "jiafu",
  "displayName": "Create React Component",
  "description": "Create an opinionated folder structure for a component.",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.70.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:create-react-component.default",
    "onCommand:create-react-component.taro"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "create-react-component.default",
        "title": "React Component"
      },
      {
        "command": "create-react-component.taro",
        "title": "React Component (with Taro Components)"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "when": "explorerResourceIsFolder",
          "command": "create-react-component.default",
          "group": "YourGroup@1"
        },
        {
          "when": "explorerResourceIsFolder",
          "command": "create-react-component.taro",
          "group": "YourGroup@1"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.70.0",
    "@types/glob": "^7.2.0",
    "@types/mocha": "^9.1.1",
    "@types/node": "16.x",
    "@typescript-eslint/eslint-plugin": "^5.31.0",
    "@typescript-eslint/parser": "^5.31.0",
    "eslint": "^8.20.0",
    "glob": "^8.0.3",
    "mocha": "^10.0.0",
    "typescript": "^4.7.4",
    "@vscode/test-electron": "^2.1.5"
  }
}
